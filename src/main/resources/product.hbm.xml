<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.hibernateapp1.model.ProductBean" table="Product">

		<composite-id>
			<key-property name="id" column="pid" />
			<key-property name="name" column="pname" />
		</composite-id>

		<property name="price" />


	</class>

</hibernate-mapping>